@model List<NhaSach.Web.Models.TrangNoiDung>
@{
    ViewData["Title"] = "Trang";
    var q = Context.Request.Query["q"].ToString();
}

<h2 class="mb-3">Trang</h2>

<form method="get" class="row g-2 align-items-center mb-3">
    <div class="col-sm-8">
        <input name="q" value="@q" class="form-control" placeholder="Tìm theo tiêu đề hoặc slug..." />
    </div>
    <div class="col-sm-4 text-sm-end">
        <a class="btn btn-primary" asp-controller="Trang" asp-action="Tao">+ Tạo trang</a>
    </div>
</form>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">Chưa có trang nào. Hãy bấm “+ Tạo trang”.</div>
}
else
{
    <ul class="list-group">
        @foreach (var p in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="me-3">
                    <div class="fw-semibold">@p.Tieude_Trang</div>
                    <div class="small text-muted">
                        <span class="me-2">/@p.Slug_Trang</span>
                        <span class="me-2">• @p.Ngay_Tao.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                        @if (p.HienThi_Menu)
                        {
                            <span class="badge text-bg-success">Hiển thị menu</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Ẩn trên menu</span>
                        }
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-controller="Trang" asp-action="ChiTiet" asp-route-slug="@p.Slug_Trang">Xem</a>
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-controller="Trang" asp-action="Sua" asp-route-id="@p.Trang_Id">Sửa</a>

                    <form method="post" asp-controller="Trang" asp-action="Xoa" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@p.Trang_Id" />
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Xoá trang \"@p.Tieude_Trang\" ?');">
                            Xoá
                        </button>
                    </form>
                </div>
            </li>
        }
    </ul>
}